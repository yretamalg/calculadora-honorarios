---
import MainHead from './MainHead.astro';
import { SEO_CONFIG, STRUCTURED_DATA } from '../constants/seo';
import Analytics from '../components/shared/Analytics';

interface Props {
    title?: string;
    description?: string;
    image?: string;
    noindex?: boolean;
}

const {
    title = SEO_CONFIG.defaultTitle,
    description = SEO_CONFIG.defaultDescription,
    image = SEO_CONFIG.defaultImage,
    noindex = false,
} = Astro.props;

const pageStructuredData = {
    ...STRUCTURED_DATA.webApplication,
    name: title,
    description: description
};
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
    <head>
        <MainHead 
            title={title}
            description={description}
            image={image}
            noindex={noindex}
        />
        
        <!-- Resto del head -->
        
        <!-- Analytics -->
        {import.meta.env.PROD && <Analytics client:load />}
    </head>
    <body class="bg-slate-950 min-h-screen text-white antialiased">
        <slot />
        
        <a 
            href="#main" 
            class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-orange-500 text-white px-4 py-2 rounded-md"
        >
            Saltar al contenido principal
        </a>
    </body>
</html>