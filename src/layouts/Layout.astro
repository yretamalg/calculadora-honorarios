---
import MainHead from './MainHead.astro';
import { SEO_CONFIG } from '../constants/seo';
import { generateStructuredData } from '../utils/seoHelpers';

export interface Props {
    title?: string;
    description?: string;
    image?: string;
    noindex?: boolean;
    schemaType?: string;
    schemaData?: Record<string, any>;
}

const {
    title = SEO_CONFIG.defaultTitle,
    description = SEO_CONFIG.defaultDescription,
    image = SEO_CONFIG.defaultImage,
    noindex = false,
    schemaType = 'WebApplication',
    schemaData = {}
} = Astro.props;

// Generate structured data
const pageSchema = generateStructuredData(schemaType, {
    name: title,
    description: description,
    ...schemaData
});

// Organization schema
const organizationSchema = JSON.stringify({
    "@context": "https://schema.org",
    "@type": "Organization",
    "name": "VBox Pro",
    "url": SEO_CONFIG.siteUrl
});
---

<!DOCTYPE html>
<html lang="es">
    <head>
        <MainHead 
            title={title}
            description={description}
            image={image}
            noindex={noindex}
        />
        
        <!-- Structured Data -->
        <script is:inline type="application/ld+json" set:html={pageSchema} />
        <script is:inline type="application/ld+json" set:html={organizationSchema} />
    </head>
    <body class="bg-slate-950 min-h-screen">
        <slot />
    </body>
</html>