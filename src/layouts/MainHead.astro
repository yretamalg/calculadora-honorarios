---
import { SEO_CONFIG } from '../constants/seo';
import { generateMetaTags } from '../utils/seoHelpers';

export interface Props {
    title?: string;
    description?: string;
    image?: string;
    path?: string;
    robots?: string;
    noindex?: boolean;
}

const {
    title = SEO_CONFIG.defaultTitle,
    description = SEO_CONFIG.defaultDescription,
    image = SEO_CONFIG.defaultImage,
    path = Astro.url.pathname,
    robots = 'index,follow',
    noindex = false
} = Astro.props;

const metaTags = generateMetaTags({
    title,
    description,
    image,
    path
});

const canonicalURL = new URL(path, Astro.site);
const languageAlternates = SEO_CONFIG.languageAlternates || [];
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<meta name="robots" content={noindex ? 'noindex,nofollow' : robots} />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{metaTags.title}</title>
<meta name="title" content={metaTags.title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.site)} />
<meta property="og:locale" content="es_CL" />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, Astro.site)} />
{SEO_CONFIG.social?.twitter && (
    <meta name="twitter:creator" content={SEO_CONFIG.social.twitter} />
)}

<!-- Language Alternates -->
{languageAlternates.map((alternate) => (
    <link rel="alternate" hrefLang={alternate.hrefLang} href={alternate.href} />
))}

<!-- Additional Meta Tags -->
{SEO_CONFIG.additionalMetaTags.map((tag) => <meta {...tag} />)}

<!-- PWA Tags -->
<meta name="theme-color" content="#ff5722" />
<meta name="mobile-web-app-capable" content="yes" />
<meta name="application-name" content={SEO_CONFIG.defaultTitle} />
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
<meta name="apple-mobile-web-app-title" content={SEO_CONFIG.defaultTitle} />