---
// Recibe los resultados como propiedad
const { results } = Astro.props;
---
<div style="margin-top: 20px;">
  {results ? (
    <div>
      <h2>Resultados</h2>
      <p><strong>Monto Bruto:</strong> ${results.gross.toFixed(2)}</p>
      <p><strong>Retención:</strong> ${results.retention.toFixed(2)}</p>
      <p><strong>Monto Líquido:</strong> ${results.net.toFixed(2)}</p>
    </div>
  ) : (
    <p>No hay resultados para mostrar.</p>
  )}
</div>
