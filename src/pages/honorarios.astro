---
import Layout from '../layouts/Layout.astro';
import CalculadoraRetencion from '../components/calculadoras/honorarios/CalculadoraRetencion';
import Footer from '../components/shared/Footer';
import { SEO_CONFIG, PAGE_METADATA } from '../constants/seo';

const { honorarios: pageMetadata } = PAGE_METADATA;
---

<Layout
    title={pageMetadata.title}
    description={pageMetadata.description}
>
    <main class="flex min-h-screen flex-col bg-slate-950">
        <div class="flex-grow">
            <CalculadoraRetencion client:load />
        </div>
        <Footer client:load />
    </main>
</Layout>