---
import Layout from '../layouts/Layout.astro';
import ChangelogViewer from '../features/changelog/components/ChangelogViewer';
import NavigationMenu from '../layouts/components/NavigationMenu';
import Footer from '../layouts/components/Footer';

const pageMetadata = {
    title: 'Historial de Cambios | vBox Pro',
    description: 'Registro de actualizaciones y mejoras de las Calculadoras Tributarias Chile.'
};
---

<Layout
    title={pageMetadata.title}
    description={pageMetadata.description}
>
    <div class="min-h-screen bg-slate-950 flex flex-col">
        <NavigationMenu client:load />
        <main class="flex-grow">
            <ChangelogViewer client:load />
        </main>
        <Footer client:load />
    </div>
</Layout>